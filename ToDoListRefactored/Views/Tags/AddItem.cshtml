@{
    Layout = "_Layout";
}


@model ToDoListRefactored.Models.Tag

<h2>Add an item</h2>

<h4>Add an item to this tag: @Html.DisplayFor(m => m.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.TagId)

    @Html.Label("Select item")
    @Html.DropDownList("ItemId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>