@{
  Layout = "_Layout";
}

@using ToDoListRefactored.Models
@model ToDoListRefactored.Models.Tag

<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(m => m.Title): @Html.DisplayFor(m => m.Title)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This tag does not belong to any items.</p>
}
else
{
  <h4>Items the tag belongs to:</h4>
  <ul>
  @foreach (ItemTag join in Model.JoinEntities)
    {
      <li>@join.Item.Description</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Add Tag to item", "AddItem", new { id = Model.TagId})</p>
