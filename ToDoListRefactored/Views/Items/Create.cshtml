@model ToDoListRefactored.Models.Item

<p>@Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>
<p>Go to @Html.ActionLink("this page", "Create", "Categories") to create a category.</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.LabelFor(model => model.Category)
    @Html.DropDownList("CategoryId")

    <input type="submit" value="Add new item" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all items", "Index")</p>